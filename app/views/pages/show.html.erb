<%= turbo_stream_from "#{dom_id(@page)}" %>

<div class="max-w-[800px] mx-auto">
  <h1 class="font-bold text-3xl mb-5"><%= @page.title %></h1>
  <div data-controller="page" data-page-lang-value="<%= @page.language.name %>" data-page-id-value="<%= @page.id %>" data-page-title-value="<%= @page.title %>">
    <div id="<%= dom_id(@page) %>_content" class="prose">
      <%= render partial: "pages/content", locals: { page: @page } %>
    </div>
    <div>
      <% if @page.rebuild %>
        <div class="text-right w-full mt-5 font-bold">
          This page was rebuilt by a human👩‍💻
        </div>
      <% end %>
    </div>
  </div>
  <div id="actionButtons" class="absolute flex gap-2 font-bold" style="visibility: hidden;">
    <a data-turbo="false" id="digButton" class="border shadow-lg rounded-full bg-white hover:bg-slate-50 p-3 hover:px-4 hover;py-2 transition-all group gap-2 flex items-center">
      <img class="w-[18px] h-[18px]" src="/dig.png" aria-label="a" />
      <div class="group-hover:block hidden text-sm">Dig</div>
    </a>
    <a data-turbo="false" id="jumpButton" class="border shadow-lg hover:shadow-xl rounded-full bg-white hover:bg-slate-50 p-3 hover:py-2 hover:px-4 transition-all group gap-2 flex items-center">
      <img class="w-[18px] h-[18px]" src="/jump.png" />
      <div class="group-hover:block hidden text-sm">Jump</div>
    </a>
  </div>
  <%= turbo_stream_from "footer-buttons" %>
  <div id="footer-buttons-<%= @page.id %>">
    <%= render partial: "pages/footer", locals: { page: @page, hidden: !@page.content.present? } %>
  </div>
</div>
